.search {
  flex-wrap wrap
  .txt {
    width 80px
    flex 0 0 80px
  }
  .el-input-group__append,
  .el-input-group__prepend {
    width: 110px;
  }
  .el-input-group__prepend + .el-input__inner {
    width: 250px
  }
  .el-input-group {
    width auto
    margin-right 16px
    margin-bottom: 10px
  }
  .el-cascader{
    width auto
    margin-right 16px
    margin-bottom: 10px
  }
}
.search > .el-select {
    width auto
    margin-right 16px
    margin-bottom: 10px
  }
// switch 开关
.el-switch {
  .el-switch__core {
    border-color $cccc
    background-color $cccc
  }
  .is-checked .el-switch__core{
    border-color $active
    background-color $active
  }
}
